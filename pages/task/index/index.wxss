/* index.wxss */
@import "/common/common.wxss";

.list {
	display: flex;
	flex-direction: column;
}

.header {
	display: flex;
}

.header .logo {
	box-sizing: border-box;
	display: block;
	margin: 24rpx 16rpx 24rpx 24rpx;
	width: 98rpx;
	height: 98rpx;
	border-radius: 100%;
	border: solid 1rpx #ddd;
}

.header .info {
	flex-grow: 1;
	margin: 16rpx 24rpx 16rpx 16rpx;
}

.inline {
	display: flex;
	justify-content: space-between;
}

.pull-right {
	margin-left: auto;
	margin-right: 8rpx;
}

.banner {
	display: block;
	width: 100%;
	height: 300rpx;
}

.with-icon {
	display: flex;
	flex-direction: row;
	align-items: center;
}